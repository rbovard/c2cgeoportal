{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "gmfapi/*": ["srcapi/*"],
      "resize-observer-polyfill": ["node_modules/resize-observer-polyfill/src/index.d.ts"]
    }
  },
  "include": ["srcapi/**/*.ts"],
  "files": ["types/dom.d.ts", "types/custom.d.ts"]
}
